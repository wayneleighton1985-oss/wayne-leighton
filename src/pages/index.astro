---
import MainLayout from '../layouts/MainLayout.astro';
import { getCollection, getEntry } from 'astro:content';

const allBooks = await getCollection('books');
const featuredBooks = allBooks.slice(0, 3);
const homePage = await getEntry('pages', 'home');
const { Content } = await homePage.render();


---

<MainLayout title={homePage.data.title}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-800 to-gray-900 py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Logo prominently displayed -->
        <div class="mb-8">
          <img 
            src={homePage.data.hero?.logoUrl || '/logo.jpeg'} 
            alt={homePage.data.hero?.logoAlt || 'Wayne Leighton Logo'} 
            class="w-32 h-32 md:w-40 md:h-40 mx-auto rounded-full shadow-2xl border-4 border-primary-600"
          />
        </div>
        
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
          {homePage.data.title}
        </h1>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          {homePage.data.description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href={homePage.data.hero?.primaryButton?.url || '/shop'} 
            class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-lg font-semibold transition-colors inline-flex items-center justify-center"
          >
            {homePage.data.hero?.primaryButton?.text || 'Shop All Books'}
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a 
            href={homePage.data.hero?.secondaryButton?.url || '#featured'} 
            class="border-2 border-primary-400 text-primary-400 hover:bg-primary-400 hover:text-gray-900 px-8 py-4 rounded-lg font-semibold transition-colors inline-flex items-center justify-center"
          >
            {homePage.data.hero?.secondaryButton?.text || 'Browse Featured'}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Books Section -->
  <section id="featured" class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">{homePage.data.featuredBooks?.title || 'Featured Books'}</h2>
        <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
          {homePage.data.featuredBooks?.description || 'Discover powerful resources to help you navigate the legal system and fight back against corruption.'}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredBooks.map((book) => (
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden transition-transform hover:scale-105">
            <div class="aspect-[3/4] bg-gray-100 dark:bg-gray-700 relative">
              <img 
                src={book.data.coverImageUrl} 
                alt={`${book.data.title} cover`}
                class="w-full h-full object-cover"
              />
              <div class="absolute top-4 right-4 bg-primary-600 text-white text-sm font-semibold px-3 py-1 rounded-full">
                {book.data.format}
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 line-clamp-2">
                {book.data.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3">
                {book.data.description}
              </p>
              <div class="flex justify-between items-center">
                <span class="text-xl font-bold text-primary-600 dark:text-primary-400">Â£{book.data.price}</span>
                <a 
                  href={`/books/${book.slug}`} 
                  class="bg-gray-900 dark:bg-gray-700 hover:bg-primary-600 dark:hover:bg-primary-600 text-white px-4 py-2 rounded-lg text-sm font-semibold transition-colors"
                >
                  View Details
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <a 
          href={homePage.data.featuredBooks?.viewAllButton?.url || '/shop'} 
          class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-lg font-semibold transition-colors inline-flex items-center"
        >
          {homePage.data.featuredBooks?.viewAllButton?.text || 'View All Books'}
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <img 
            src={homePage.data.about?.imageUrl || '/wayne-leighton.jpeg'} 
            alt={homePage.data.about?.imageAlt || 'Wayne Leighton'} 
            class="w-full max-w-md mx-auto rounded-xl shadow-xl"
          />
        </div>
        <div class="prose prose-lg dark:prose-invert max-w-none">
          <Content />
          <div class="mt-8">
            <a 
              href={homePage.data.about?.learnMoreButton?.url || '/about'} 
              class="bg-transparent hover:bg-primary-600 text-primary-600 hover:text-white border-2 border-primary-600 px-6 py-3 rounded-lg font-semibold transition-colors inline-flex items-center"
            >
              {homePage.data.about?.learnMoreButton?.text || 'Learn More About Wayne'}
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">{homePage.data.testimonials?.title || 'Reader Testimonials'}</h2>
        <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
          {homePage.data.testimonials?.description || 'Hear from those who have used Wayne\'s books to fight back and win.'}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {(homePage.data.testimonials?.items || []).map((testimonial) => (
          <div class="bg-white dark:bg-gray-800 p-8 rounded-xl shadow-lg">
            <div class="flex items-center mb-4">
              <div class="text-yellow-500 flex">
                {Array(testimonial.rating).fill('').map(() => (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                ))}
              </div>
            </div>
            <blockquote class="text-gray-600 dark:text-gray-300 mb-4 italic">
              "{testimonial.quote}"
            </blockquote>
            <div class="font-semibold text-gray-900 dark:text-white">- {testimonial.author}</div>
          </div>
        ))}
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>