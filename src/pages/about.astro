---
import MainLayout from '../layouts/MainLayout.astro';
import { getEntry } from 'astro:content';

const aboutPage = await getEntry('pages', 'about');
const { Content } = await aboutPage.render();
---

<MainLayout 
  title={aboutPage.data.title}
  description={aboutPage.data.description}
>
  <section class="py-12">
    <div class="container mx-auto px-4">
      <!-- Hero Section -->
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          About Wayne Leighton
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed">
          Exposing corruption in the establishment and sharing a life journey filled with extraordinary experiences.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 mb-16">
        <!-- Author Photo & Bio -->
        <div class="lg:col-span-2 space-y-8">
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8">
            <div class="flex flex-col md:flex-row gap-8">
              <div class="md:w-1/3">
                <img 
                  src="/wayne-leighton.jpeg" 
                  alt="Wayne Leighton"
                  class="w-full aspect-square object-cover rounded-lg"
                />
              </div>
              <div class="md:w-2/3 prose prose-gray dark:prose-invert max-w-none">
                <Content />
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-8">
          <!-- Quick Stats -->
          {aboutPage.data.quickFacts && (
            <div class="bg-primary-50 dark:bg-primary-900/20 rounded-xl p-6">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">{aboutPage.data.quickFacts.title}</h3>
              <div class="space-y-3">
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-300">Countries Visited:</span>
                  <span class="font-semibold text-gray-900 dark:text-white">{aboutPage.data.quickFacts.countriesVisited}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-300">Years as Nomad:</span>
                  <span class="font-semibold text-gray-900 dark:text-white">{aboutPage.data.quickFacts.yearsAsNomad}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-300">Books Published:</span>
                  <span class="font-semibold text-gray-900 dark:text-white">{aboutPage.data.quickFacts.booksPublished}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-300">Legal Cases Won:</span>
                  <span class="font-semibold text-gray-900 dark:text-white">{aboutPage.data.quickFacts.legalCasesWon}</span>
                </div>
              </div>
            </div>
          )}
          
          <!-- Contact Info -->
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Get in Touch</h3>
            <div class="space-y-4">
              <p class="text-gray-600 dark:text-gray-300">
                For media inquiries, speaking engagements, or to share your own experiences with the legal system:
              </p>
              <a 
                href="/contact" 
                class="block bg-primary-600 hover:bg-primary-700 text-white px-4 py-3 rounded-lg font-semibold text-center transition-colors"
              >
                Contact Wayne
              </a>
            </div>
          </div>
          
          <!-- Book Promo -->
          <div class="bg-gray-100 dark:bg-gray-700 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Featured Book</h3>
            <div class="text-center">
              <img 
                src="/images/books/find-your-passion.jpeg" 
                alt="Find Your Passion Book Cover" 
                class="w-32 mx-auto mb-4 rounded-md shadow-md"
              />
              <h4 class="font-semibold text-gray-900 dark:text-white mb-2">Find Your Passion</h4>
              <p class="text-sm text-gray-600 dark:text-gray-300 mb-4">
                The complete guide to fighting back against corrupt systems and winning.
              </p>
              <a 
                href="/books/passion-ebook" 
                class="block bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 rounded-lg text-sm font-semibold transition-colors"
              >
                Learn More
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>