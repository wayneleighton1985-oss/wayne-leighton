---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Contact Wayne Leighton" description="Get in touch with Wayne Leighton for media inquiries, speaking engagements, or subscribe to updates.">
  <section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Get in Touch
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          For media inquiries, speaking engagements, or to share your own experiences with the legal system.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Contact Form -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8">
          <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">
            Send a Message
          </h2>
          <form id="contact-form" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Full Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                placeholder="Your full name"
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                placeholder="your.email@example.com"
              />
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Subject *
              </label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
              >
                <option value="">Select a subject</option>
                <option value="media">Media Inquiry</option>
                <option value="speaking">Speaking Engagement</option>
                <option value="legal">Legal System Experience</option>
                <option value="book">Book Related</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Message *
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent dark:bg-gray-700 dark:text-white resize-vertical"
                placeholder="Your message..."
              ></textarea>
            </div>
            
            <button
              type="submit"
              class="w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Subscription Form -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8">
          <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">
            Stay Updated
          </h2>
          <p class="text-gray-600 dark:text-gray-300 mb-6">
            Subscribe to receive updates about new books, speaking events, and insights into fighting corruption in the legal system.
          </p>
          
          <form id="subscription-form" class="space-y-6">
            <div>
              <label for="sub-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Full Name *
              </label>
              <input
                type="text"
                id="sub-name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                placeholder="Your full name"
              />
            </div>
            
            <div>
              <label for="sub-email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Email Address *
              </label>
              <input
                type="email"
                id="sub-email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                placeholder="your.email@example.com"
              />
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">
                Interests (select all that apply):
              </label>
              <div class="space-y-2">
                <label class="flex items-center">
                  <input type="checkbox" name="interests" value="books" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500">
                  <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">New Book Releases</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="interests" value="speaking" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500">
                  <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Speaking Events</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="interests" value="legal" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500">
                  <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Legal System Insights</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="interests" value="travel" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500">
                  <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Travel Stories</span>
                </label>
              </div>
            </div>
            
            <div class="flex items-start">
              <input
                type="checkbox"
                id="privacy-consent"
                name="privacy-consent"
                required
                class="mt-1 rounded border-gray-300 text-primary-600 focus:ring-primary-500"
              >
              <label for="privacy-consent" class="ml-2 text-sm text-gray-600 dark:text-gray-300">
                I agree to receive email updates and understand I can unsubscribe at any time. *
              </label>
            </div>
            
            <button
              type="submit"
              class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
            >
              Subscribe to Updates
            </button>
          </form>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="mt-12 bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6 text-center">
          Other Ways to Connect
        </h2>
        <div class="grid md:grid-cols-3 gap-6 text-center">
          <div>
            <div class="bg-primary-100 dark:bg-primary-900/20 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Email</h3>
            <p class="text-gray-600 dark:text-gray-300">
              <a href="mailto:contact@wayneleighton.com" class="hover:text-primary-600 transition-colors">
                contact@wayneleighton.com
              </a>
            </p>
          </div>
          
          <div>
            <div class="bg-primary-100 dark:bg-primary-900/20 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Books</h3>
            <p class="text-gray-600 dark:text-gray-300">
              <a href="/shop" class="hover:text-primary-600 transition-colors">
                Browse Wayne's Books
              </a>
            </p>
          </div>
          
          <div>
            <div class="bg-primary-100 dark:bg-primary-900/20 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">About Wayne</h3>
            <p class="text-gray-600 dark:text-gray-300">
              <a href="/about" class="hover:text-primary-600 transition-colors">
                Learn More About Wayne
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Contact Form Handler
    document.getElementById('contact-form')?.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const form = this as HTMLFormElement;
      const formData = new FormData(form);
      const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      const originalText = submitButton?.textContent || 'Send Message';
      
      if (submitButton) {
        submitButton.textContent = 'Sending...';
        submitButton.disabled = true;
      }
      
      try {
        // Here you would typically send to your backend or email service
        // For now, we'll simulate a successful submission
        await new Promise(resolve => setTimeout(resolve, 1000));
        
        alert('Thank you for your message! Wayne will get back to you soon.');
        form.reset();
      } catch (error) {
        alert('Sorry, there was an error sending your message. Please try again or email directly.');
      } finally {
        if (submitButton) {
          submitButton.textContent = originalText;
          submitButton.disabled = false;
        }
      }
    });
    
    // Subscription Form Handler
    document.getElementById('subscription-form')?.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const form = this as HTMLFormElement;
      const formData = new FormData(form);
      const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      const originalText = submitButton?.textContent || 'Subscribe to Updates';
      
      if (submitButton) {
        submitButton.textContent = 'Subscribing...';
        submitButton.disabled = true;
      }
      
      try {
        // Here you would typically send to your email service provider
        // For now, we'll simulate a successful subscription
        await new Promise(resolve => setTimeout(resolve, 1000));
        
        alert('Thank you for subscribing! You\'ll receive updates about Wayne\'s latest work.');
        form.reset();
      } catch (error) {
        alert('Sorry, there was an error with your subscription. Please try again.');
      } finally {
        if (submitButton) {
          submitButton.textContent = originalText;
          submitButton.disabled = false;
        }
      }
    });
  </script>
</MainLayout>